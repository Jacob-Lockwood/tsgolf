---
import Layout from "./Layout.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<Layout title={title}>
  <slot />
</Layout>

<style is:global>
  .prose :where(:not(pre)) code {
    @apply bg-sky-50 px-1 py-0.5 rounded;
  }
  .prose :where(:not(pre)) code::before,
  .prose :where(:not(pre)) code::after {
    content: "";
  }
</style>
